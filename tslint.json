{
	"defaultSeverity": "error",
	"extends": [
		"tslint-react",
		"tslint-react-native"
	],
	"jsRules": {},
	"rules": {
		"import-name": [
			false
		],
		"variable-name": [
			true,
			"ban-keywords",
			"check-format",
			"allow-pascal-case"
		],
		"quotemark": [
			true,
			"single",
			"jsx-double"
		],
		"trailing-comma": [
			true,
			{
				"multiline": {
					"objects": "always",
					"arrays": "always",
					"functions": "never",
					"typeLiterals": "ignore"
				},
				"esSpecCompliant": true
			}
		],
		"member-ordering": [
			true,
			{
				"order": "fields-first"
			}
		],
		"ban-comma-operator": true,
		"no-unused-variable": true,
		"no-var-keyword": true,
		"prefer-const": true,
		"import-spacing": true,
		"eofline": true,
		"jsx-no-lambda": false,
		"jsx-no-multiline-js": false,
		"jsx-wrap-multiline": false,
		"linebreak-style": [
			true,
			"LF"
		],
		"no-trailing-whitespace": true,
		"semicolon": [
			true,
			"never"
		],
		"ordered-imports": [
			true, {
				"grouped-imports": true
			}
		]
	},
	"rulesDirectory": []
}
